<!-- 전체 그리드 -->
  <div class="container maxmain">
    <div class="row">
      <div class="mainpage"> 
        <%= render partial: "navbar" %>
      </div>
    </div>
  </div>

  <div class="container">
    <h2 class="page-header">마이페이지
      <a href="/user/edit" ><img src ="/image/setting.png" style="width: 30px; height: auto;" class="optionpng"></a>
    </h2>
    <!-- 그룹 생성 -->
    <div class="row">
      <div class="col-sm-6 col-md-4">
        <div class="panel panel-default panel-height panel-make" style="background-color: #ffc513; cursor:pointer; border:none; box-shadow: 1px 1px 5px 1px #ddd;" type="button" data-toggle="modal" data-target="#addgroups">
          <img src="/image/pluss.png" class="imghover" style="width: 50px; height: auto; margin-left: 40%; margin-top: 26%;">
          <p style="text-align: center; font-weight: 400; margin-top: 10px;">그룹을 추가해 주세요.</p>
        </div>
      </div>
      <% if @g %>
        <!--이거가 하나씩 -->
        <% @g.each do |g|%>
        <div class="col-sm-6 col-md-4">
          <div class="panel panel-default panel-height" style="border:none; box-shadow: 1px 1px 5px 1px #ddd;">
            <div class="panel-heading" style="background-color: #ffffff; margin-left: 10px; margin-right: 10px;">
              <h3 class="panel-title" style="color: #ffb600; font-weight: 400; font-size: 24px; margin-left: -15px;">
                <%= g.gname %>
              </h3>
            </div>
            <div class="panel-body">
                <h5>총무: <%=g.leader%></h5>
                <h5>계좌번호: <%=g.account_number%></h5>
                <h5>예치금: <%=g.total%> 원</h5>
              <!-- 삭제 -->
              <a href="/moneyger/delete/<%= g.id %>" class="btn btn-default btn-delete" style="border-radius: 17px; margin-left: 53%;">삭제</a>
              <!-- 열기 -->
              <a href="/moneyger/index/<%= g.id %>" class="btn btn-default btn-align" style="border-radius: 17px;">열기</a>
            </div>
          </div>
        </div>
        <%end%>
        <!-- 여기까지 -->
      <% else %>
      <% end %>

        
      </div>
  
    </div>
  </div>  
  


<!-- 그룹추가 모달 -->
<div class="container">
  <div class="row">
    <div class="modal fade" id="addgroups" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <!-- modal head -->
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">그룹 추가</h4>
          </div>
          <form action="/moneyger/test" type="POST">
            <!-- modal body 그룹 이름값 넣기 -->
            <div class="modal-body" style="padding-left: 10%; padding-right: 10%;">
              <!-- 추가할 그룹 입력창 -->
              <div class="form-group">
                <label>그룹 이름</label>
                <input type="text" name="gname" class="form-control" maxlength="10" placeholder="그룹 이름(10자 이내)" required>
              </div>
              <div class="form-group">
                <label>총무</label>
                <input type="text" name="leader" class="form-control" placeholder="총무 이름" required>
              </div>
              <div class="form-group">
                <label>계좌 번호</label>
                <input type="text" name="account_number" class="form-control" placeholder="예: 우리 1234-234-234234" required>
              </div>
              <div class="form-group">
                <label>예치금</label>
                <input type="number" name="total" class="form-control" placeholder="예: 50000" required>
              </div>
            </div>
              <!-- 취소 버튼 -->
              <button type="button" class="btn btn-cancel" data-dismiss="modal">취소</button>
              <!-- 저장 버튼 데이터 연결 -->
              <button type="submit" class="btn btn-save">등록</button>
          </form>
        </div><!-- END modal-content -->
      </div><!-- END modal-dialog -->
    </div><!-- END modal-fade -->
  </div><!-- END modal-row -->
</div><!-- END modal-container -->