<div class="submain">  
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        
      </div>  
      <div class="col-md-5">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        
          <div class="form-actions">
            <button class="btn btn-default btn-align" style="border-radius: 17px; width: 49%;" type="submit" value="로그인">로그인</button>
        <% end %>
        
        <a href="/user/sign_up" class="btn btn-default btn-signin" style="border-radius: 17px; width: 49%;">회원가입</a>
          </div>
          <div style="margin-top: 2%;">
            <a href="/user/password/new" id="forgotpw">비밀번호를 잊으셨습니까?</a>
          </div>
      </div><!-- END col-md-6 col-md-offset-3 -->
    </div><!-- END row -->
  </div><!-- END container -->
</div><!--END submain -->