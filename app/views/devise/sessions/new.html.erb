<div class="submain" style="margin-top: 4%;">  
  <div class="container" style="margin-bottom: 2%;">
    <div class="row">
      <!-- 로고 이미지 -->
      <div class="col-md-8">
        <img src="/image/main_logo.png" style="width: 75%;">
      </div><!-- END col-md-7 --> 
      <!-- 로그인 -->
      <div class="col-md-4">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        
          <div class="form-actions">
            <button class="btn btn-default btn-align" style="border-radius: 17px; width: 49%;" type="submit" value="로그인">로그인</button>
        <% end %>
        
        <a href="/user/sign_up" class="btn btn-default btn-signin" style="border-radius: 17px; width: 49%;">회원가입</a>
          </div>
          <div style="margin-top: 2%;">
            <a href="/user/password/new" id="forgotpw">비밀번호를 잊으셨습니까?</a>
          </div>
      </div><!-- END col-md-5 -->
    </div><!-- END row -->
  </div><!-- END container -->
    <!-- 이미지 넣기 -->
    <style="margin-top: 2%;">
      <img src="/image/main_img.png" style= "margin-left: 10%; width: 82%;">

    </style>
  
</div><!--END submain -->